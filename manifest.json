{
  "name": "QuickActions Chrome",
  "version": "0.0.1",
  "description": "Puts the internet at your fingertips",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["app-ep.css", "css/style.css"],
      "js": ["js/lib/require.js", "require-cs.js", "app-cs.js"]
    }
  ],
  "permissions": [
    "http://*/",
    "https://*/",
    "bookmarks",
    "history",
    "topSites",
    "downloads",
    "downloads.open"
  ],
  "web_accessible_resources": [
    "js/*",
    "providers/*",
    "css/*"
 ],
 "background": {
   "scripts": ["app-ep.js"],
   "persistent": false
  },
  "commands": {
        "toggle-open": {
          "suggested_key": {
            "default": "Ctrl+M",
            "mac": "Command+M"
          },
          "description": "Toggle QuickActions"
        }
  },
  "manifest_version": 2
}
